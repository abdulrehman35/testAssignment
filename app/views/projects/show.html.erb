<div class="container">
      <h2>Project Details</h2>
      <div class="row text-center">
        <h3><%= @project.title %></h3>
      </div>
      <h4>Description: </h4>
      <div class="ms-5 fs-2"> <%= @project.description %></div>
      <h4>Assign Users:</h4>
      <div class="d-flex justify-content-center">
        <table class="table table-striped w-75">
          <thead>
            <tr>
              <th>User Name</th>
              <th>Role</th>
            </tr>
          </thead>
          <tbody>
            <% @project.users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.roles.pluck(:name).first %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="text-center">
        <% if policy(@project).edit? %>
          <%= link_to "Edit Project", edit_project_path(@project), :class => "btn btn-outline-info btn-sm" %>
          <%= link_to "Delete Project", project_path(@project), :class => "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: "Are your sure?"} %>
        <% end %>
        <%= link_to "Add Task", new_project_task_path(@project), :class => "btn btn-outline-primary btn-sm" %>
      </div>
</div>
<hr>

<div class="container">
  <h3>Task List</h3>
  <div class="d-flex justify-content-center">
    <table class="table table-striped w-75">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Task Type</th>
          <th>Developer</th>
          <th>Role</th>
          <th>Task Status</th>
          <th>Action</th>
        </tr>
      </thead>
        <tbody>
          <% @project.tasks.each do |task| %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.description %></td>
              <td><%= task.type %></td>
              <td><%= task.user.name %></td>
              <td><%= task.user.roles.pluck(:name).first %></td>
              <td><%= task.aasm_state %></td>
              <td> <%= link_to "Show",  project_task_path(task), :class => "btn btn-outline-info btn-sm" %> </td>
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>
    <% if @project.tasks.last.image.attached? %>
      <div style="margin-bottom: 20px;">
        <%= image_tag(@project.tasks.last.image) %>
      </div>
    <% end %>
</div>

