    <!-- <%= f.association :users, label_method: :name, value_method: :id, include_blank: false, :input_html => {:maxlength =>50, :style=> 'width: 500px'} %> -->
    <br>
    <%= f.button :submit, class:"btn-primary" %>
  <% end %>
</div>
