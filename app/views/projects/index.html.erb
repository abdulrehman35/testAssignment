<% viewer = current_user.present? ? current_user.name : 'Stranger' %>



<div class="container">
  <h2 class="text-primary">Hello <%= viewer %>, Welcome to testProject</h2>
  <h2>Projects#index</h2>
  <p>Find me in app/views/projects/index.html.erb</p>
</div>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td> <%= link_to "Show", project, :class => "btn btn-outline-info btn-sm" %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

